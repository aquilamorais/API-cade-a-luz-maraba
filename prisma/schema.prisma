generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  name       String
  email      String      @unique
  password   String
  cpf        String      @unique
  role       String
  createAt   DateTime    @default(now())
  updateAt   DateTime    @updatedAt
  Complement Complement?
  complaints Complaint[]
}

model Complement {
  id           Int      @id @default(autoincrement())
  img          String
  neighborhood String
  address      String
  createAt     DateTime @default(now())
  updateAt     DateTime @updatedAt
  userId       Int      @unique
  user         User     @relation(fields: [userId], references: [id])
}

enum Status {
  ABERTO
  EM_ANDAMENTO
  RESOLVIDO
}

enum Option {
  FALTOUENERGIA
  OSCILACAO
  INCENDIO
  MANUTENCAO
}

model Complaint {
  id           Int      @id @default(autoincrement())
  img          String?
  title        String
  description  String
  neighborhood String
  address      String
  hour         DateTime
  createAt     DateTime @default(now())
  updateAt     DateTime @updatedAt
  option       Option

  status Status @default(ABERTO)

  userId Int
  user   User @relation(fields: [userId], references: [id])
}
